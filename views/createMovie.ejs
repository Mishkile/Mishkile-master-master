        section {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    </style>

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/searchShow">Search Shows</a>
                </li>
                <li class="nav-item">
                <li id="menuDiv">
                    <a href="/menu" class="nav-link">Menu</a>
                </li>
                <li class="nav-item">
                <li id="menuDiv">
                    <a href="/logout" class="nav-link">Log Out</a>
                </li>
        </div>

        </li>





        </ul>
        </div>

    </nav>
    <main>


        <section>
            <h1>Add Shows</h1>
            <div id="form-div">
                <form action="/createMovie/newMovie" method="POST">
                    <div class="form">
                        <% if (msg !==null) { %>
                            <div class="title">
                                <%= msg %>
                            </div>

                            <% } %>
                                <div class="title">Welcome</div>
                                <div class="subtitle">Add Show</div>
                                <div class="input-container ic1">
                                    <input name="movieName" id="firstname" class="input" type="text" required />
                                    <div class="cut"></div>
                                    <label for="movieName" class="placeholder">Show Name</label>
                                </div>
                                <div class="input-container ic2">
                                    <input name="movieLang" id="lastname" class="input" type="text" placeholder=""
                                        required />
                                    <div class="cut"></div>
                                    <label for="movieLang" class="placeholder">Show Languages</label>
                                </div>
                                <div class="input-container ic2">
                                    <input style="height: 5vh" type="text" class="input" id="" name="movieGenres" id="">
                                    <div class="cut"></div>
                                    <label for="movieGenres" class="placeholder">Show Genres</label>
                                </div>

                                <button type="text" class="submit">Add Show</button>
                    </div>
                </form>
            </div>
        </section>


        </section>
    </main>


</body>

</html>